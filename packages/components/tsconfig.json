{
  "compilerOptions": {
    "jsx": "preserve",
    "rootDir": "./src",
    "outDir": "./lib",
    "composite": true,

    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "*.stories.tsx",
    "lib"
  ],
  "include": [
    "src",
    "src/**/*.json"]
}
